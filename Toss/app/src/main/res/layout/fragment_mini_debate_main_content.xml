<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajulnahar.toss.Fragments.MiniDebateMainContentFragment">

    <com.example.rajulnahar.toss.Containers.VerticalViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/miniviewpager">

    </com.example.rajulnahar.toss.Containers.VerticalViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:gravity="center"
        android:id="@+id/nav">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:alpha="0.4"
        android:background="#ffffff"
        android:id="@+id/ll_minidebate"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Mini Debate"
            android:id="@+id/minidebates"
            android:gravity="center"
            android:textSize="20dp"
            android:elevation="10dp"
            android:textColor="#000000"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:alpha="0.9"
        android:id="@+id/ll_featuredDebate"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/featureddebate"
            android:text="Featured Debate"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"/>

    </LinearLayout>
    </LinearLayout>



</FrameLayout>
