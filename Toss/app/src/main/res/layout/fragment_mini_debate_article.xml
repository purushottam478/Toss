<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rajulnahar.toss.Fragments.MiniDebateArticleFragment">

    <!-- TODO: Update blank fragment layout -->
    <include layout="@layout/headcard"></include>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:id="@+id/footer">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#222222"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:layout_gravity="center">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom">


        </LinearLayout>
        <android.support.design.widget.FloatingActionButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tosstext"
            android:id="@+id/fab_tail"
            android:backgroundTint="@color/headtheme"
            android:layout_gravity="center"
            android:elevation="10dp"/>
        <RelativeLayout
            android:id="@+id/rlVote"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            >
        </RelativeLayout>


    </FrameLayout>

</FrameLayout>
